{
  "name": "project-ai-lms",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.15.1",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "postinstall": "echo Using pnpm as the package manager",
    "check:node": "node scripts/check-node.mjs",
    "port:free": "node scripts/port-free.mjs",
    "dev:clean": "node -e \"try{require('fs').rmSync('app/.next',{recursive:true,force:true});}catch(_){}\" && pnpm run dev",
    "approve-builds": "pnpm approve-builds",
    "dev": "pnpm run check:node && pnpm --dir app dev",
    "build": "pnpm run check:node && pnpm --dir app build",
    "start": "pnpm run check:node && pnpm --dir app start",
    "typecheck": "tsc -p tsconfig.json --noEmit && pnpm --filter app typecheck",
    "lint": "eslint . --ext .ts,.tsx,.js,.cjs,.mjs && pnpm --filter app lint",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.cjs,.mjs --fix && pnpm --filter app lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run && pnpm --filter app test",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "supabase:login": "supabase login",
    "supabase:link": "cross-env-shell \"supabase link --project-ref $SUPABASE_PROJECT_REF -p $SUPABASE_DATABASE_PASSWORD\"",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "db:migration:new": "supabase migration new",
    "db:push": "supabase db push",
    "orpc:check": "pnpm --dir app orpc:check",
    "orpc:gen": "pnpm --dir app orpc:gen",
    "orpc:docs": "pnpm --dir app orpc:docs"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@next/env": "^15.5.3",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^7.0.3",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
